<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/master_list_fragment_texty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/recipe_margin_top_sides"
        android:layout_marginStart="@dimen/recipe_margin_top_sides"
        android:layout_marginBottom="@dimen/recipe_margin_bottom"
        android:layout_marginEnd="@dimen/recipe_margin_top_sides"
        android:lineSpacingMultiplier="1.5"
        android:textSize="12sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/master_list_fragment_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />

</LinearLayout>
