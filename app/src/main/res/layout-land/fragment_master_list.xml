<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ScrollView
        android:id="@+id/master_list_scrollview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/master_list_fragment_texty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/recipe_margin_top_sides"
            android:layout_marginStart="@dimen/recipe_margin_top_sides"
            android:layout_marginBottom="@dimen/recipe_margin_bottom"
            android:layout_marginEnd="@dimen/recipe_margin_top_sides"
            android:lineSpacingMultiplier="1.5"
            android:textSize="12sp"
            tools:text="THIS IS A RECIPE"/>
    </ScrollView>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#444"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/master_list_fragment_listview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        />

</LinearLayout>
