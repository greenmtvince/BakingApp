<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/list_side_margin"
    android:layout_marginRight="@dimen/list_side_margin"
    android:layout_marginTop="@dimen/list_side_margin"
    android:layout_marginBottom="@dimen/list_side_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@color/photo_placeholder" />
        <TextView
            android:id="@+id/Recipe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="@dimen/card_padding_left"
            android:paddingRight="@dimen/card_padding_right"
            android:paddingTop="@dimen/card_title_padding_top"
            android:textColor="#000"
            android:textSize="24sp"
            tools:text="This Is the Recipe" />

        <TextView
            android:id="@+id/Recipe_servings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingBottom="@dimen/card_text_padding_bottom"
            android:paddingLeft="@dimen/card_padding_left"
            android:paddingRight="@dimen/card_padding_right"
            android:paddingTop="@dimen/card_text_padding_top"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="Serves 8" />
    </LinearLayout>
</android.support.v7.widget.CardView>